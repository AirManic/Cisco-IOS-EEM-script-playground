!
conf t
!

!
no event manager applet CRYPTO-KEY-GENERATE
   event manager applet CRYPTO-KEY-GENERATE
 event tag NONE none sync yes maxrun 180
 event tag TIMER timer countdown time 90
 event tag SYS_RESTART syslog pattern "SYS-5-RESTART: System restarted"
 trigger
  correlate event NONE or event TIMER or event SYS_RESTART
 action 000.000      syslog msg "Running ... "
 action 001          comment == CLI housekeeping
 action 001.010      cli command "enable"
 action 001.015      cli command "term exec prompt timestamp"
 action 001.020      cli command "term length 0"
 action 002.010.02   syslog msg "Destroy self"
 action 002.020.01   cli command "config t"
 action 002.020.10   cli command " no event manager applet CRYPTO-KEY-GENERATE"
 action 002.020.80   cli command "end"
 action 002.020.99   cli command "wr mem"
 action 070   syslog msg  "crypto key generate rsa modulus 2048 general-keys"
 action 071   cli command "crypto key generate rsa modulus 2048 general-keys"
!

! Benediction
end